<h1>Please upload your invoices</h1>

<% if current_user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(current_user.errors.count, "error") %> found:</h2>
 
    <ul>
    <% current_user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with url: upload_invoices_path do |form| %>
  <%= form.file_field :invoices, accept: "text/csv" %>
  <%= submit_tag "Upload" %>
<% end %>

<p>
  <%= link_to "Return to home", root_path %>
</p>